# App Configuration
NODE_ENV=development
PORT=3000

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1
DYNAMODB_ACCESS_KEY=localkey
DYNAMODB_SECRET_KEY=localsecret

# UPI Payment Integration
UPI_API_ENDPOINT=https://api.upi-sandbox.example.com
UPI_API_KEY=your-upi-api-key
UPI_WEBHOOK_SECRET=your-upi-webhook-secret

# AD Bank Integration (Currency Conversion)
ADBANK_API_ENDPOINT=https://api.adbank-sandbox.example.com
ADBANK_API_KEY=your-adbank-api-key
ADBANK_API_SECRET=your-adbank-api-secret

# Wise Integration
WISE_API_ENDPOINT=https://api.sandbox.wise.com
WISE_API_KEY=your-wise-api-key
WISE_PROFILE_ID=your-wise-profile-id

# Transaction Limits
MIN_TRANSACTION_AMOUNT_INR=500
MAX_TRANSACTION_AMOUNT_INR=100000
MIN_TRANSACTION_AMOUNT_CAD=10
MAX_TRANSACTION_AMOUNT_CAD=1500

# Fee Configuration
FIXED_FEE_INR=50
PERCENTAGE_FEE=0.5

# Logging
LOG_LEVEL=info 